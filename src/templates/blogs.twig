{% extends "_pages/page_layout.twig" %}
<head>
    {% block head %}
        <link rel="stylesheet" href="../css/styles.css"/>
        <link rel="stylesheet" href="../css/blogs.css"/>
        <title>{% block title %} Blogs {% endblock %}</title>
    {% endblock %}
</head>

<nav>
    {% block nav %}
        <a href="../../index.html">Home</a>
        <a href="../templates/blogs.html">Blogs</a>
        <a href="../templates/article.html">Article</a>
    {% endblock %}
</nav>

{% block content %}
    <h1 class="test">
        Blogs
    </h1>
    <div class="posts">
        {% for article in blogsData %}
            {% include '_card.twig' with article %}
        {% endfor %}
    </div>
{% endblock %}

{% block scripts %}
    <script src="../js/index.js"></script>
    <script src="../js/blogs.js"></script>
{% endblock %}
